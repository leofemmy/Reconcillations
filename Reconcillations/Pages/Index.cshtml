@*body of the page*@

@if (!string.IsNullOrWhiteSpace(Model.Message))
{
    <script type="text/javascript">
                    //alert("@Model.Message");
                  Swal.fire({
                        type: 'warning',
                        title: 'Warning Message',
                        text: "@Model.Message",
                        footer: ''
                 })

    </script>
}
<div class="form-title">
    <h1>Login </h1>
</div>
<!-- Login Form-->
<div class="login-form text-center">
    <div class="toggle">
        <i class="fa fa-user-plus"></i>
    </div>
    <div class="form formLogin">
        <h2>Login to your account</h2>
        <form method="post" class="login100-form validate-form">
            <input type="text" placeholder="User ID / Email Address" asp-for="cuserpass.Email" autocomplete="off" />
            <span class="focus-input100" asp-validation-for="cuserpass.Email"></span>
            <input type="password" placeholder="Password" asp-for="cuserpass.Userpass" autocomplete="off" />
            <span class="focus-input100" asp-validation-for="cuserpass.Userpass"></span>
            <div class="remember text-left">
            </div>
            <button>Login</button>
            <div class="forgetPassword">
                <a class="txt-info" href="~/Account/forgot_password">Forgot your password?</a>
            </div>
            @if (ViewData["Message"] != null)
            {
                <script type="text/javascript">
            @*@Html.Raw(TempData["notification"])*@
            Swal.fire({
                            type: 'success',
                            title: 'Success',
                            text: ViewData ["Message"],
                            footer: ''
                        })
                </script>
            }
        </form>
    </div>
</div>

